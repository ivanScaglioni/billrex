---
import Footer from "./Footer.astro"
import Navbar from "./Navbar.astro";

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Amarante&family=Orbitron:wght@400..900&display=swap" rel="stylesheet">
		
		
		

		<meta name="generator" content={Astro.generator} />
		<title>BILLREX</title>
	</head>
	<Navbar />
	<body>
		<slot />
	</body>
	<Footer/>
</html>

<style is:global>
	:root{
		--main_bg_color: #27374D;
		--secundary_color: #d0ff89;
		--secundary_color_2: greenyellow;
		--dark_color: #161c21;
		--dark_color_3: #20272d;
		--dark_color_2: #526D82;
		--light_color:  #DDE6ED;
		--light_color_2: #9DB2BF;
		--border_r_1: 10px;
	}	

	html,
	body {
		color: #DDE6ED;
		font-size: 1.2rem;
		background-color: #27374D;
		margin: 0;
		padding: 0;
		width: 100%;
		min-height: 100%;
		scroll-behavior: smooth;
		font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
	}
	.title{
		font-size: 5rem;
		color: #DDE6ED;
        color: rgb(208, 255, 137);
		font-weight: 800;
		font-style: normal;
		font-family: "Orbitron", serif;

	}


	.txt_title{
		font-size: clamp( 1.7rem ,3vw , 2rem );
	}

	.txt_big{
		font-size: clamp( 1.4rem , 2vw , 1.7rem );
	}
	.txt_normal{
		font-size: clamp( 1.25rem , 1vw , 1.5rem );
	}

	@media screen and (max-width: 800px) {
        .vertical{
            font-size: 1.5rem;
        }
    }
</style>
