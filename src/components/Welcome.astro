---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
import Image from 'astro/components/Image.astro';
import billreximg from '../assets/Billrex_04.png'
import billimg from '../assets/billrex.png'
import swampimg from '../assets/R.png'
---

<div id="container">


	<img class="br_img" src={billimg.src} alt="asd">

	

	<img class="swamp_img " src={swampimg.src} alt="asd">

	<div class="name">
		<div class="bill">

			<span>B</span><span>I</span><span>L</span><span>L</span>
		</div>
		<div class="rex">
			<span>R</span><span>E</span><span>X</span>
		</div>
	</div>
	<div class="bar_black">

	</div>
</div>



<style>
	#container{
		
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		width: 100% ;
		height: 100vh;
		background-position: center;
		background-repeat: no-repeat;
		user-select: none;
		color: #b5ff78;
		font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
		overflow: hidden;
		
	}
	
	.name{
		z-index: 2;
		position: fixed;
		color: white;
		font-size:  15rem;
		font-family: "Amarante", serif;
		font-weight: 400;
		font-style: normal;
		color: var(--secundary_color);
		
		
	}
	
	
	span{
		opacity: 0; /* Empieza oculto */
		
		transform: translateY(20px); /* Empieza desplazado */
		animation: fadeIn 5s ease-out forwards;
	}
	.rex{
		letter-spacing: 1.5rem;
	}
	

	.br_img{
		position: absolute;
		height: 100vh;
		margin-left: -40vh;
		z-index: 1;
		filter: brightness(0);
		user-select: none;
		opacity: 0; /* Empieza oculto */
		
		transform: translateY(20px); /* Empieza desplazado */
		animation: fadeIn 3s ease-out forwards;

	}
	.swamp_img{
		position: relative;
		
		width: 800px;
		margin-top: 50vh;
		user-select: none;
	

		z-index: 3;
		filter:brightness(0); 
		opacity: 0; /* Empieza oculto */
		
		transform: translateY(20px); /* Empieza desplazado */
		animation: fadeIn 3s ease-out forwards;


	
	}
	.bar_black{
		position: absolute;
		min-height: 150px;
		width: 100%;
		background-color: black;
		align-self: flex-end;
		justify-self: flex-end;
		margin-top: 100vh;
		z-index: 30;
		box-shadow: 0px 0px 100px 10px rgb(0, 0, 0);
	}
	.bill{
		position: relative;
		top: 60px;

	}
	.rex{
		position: relative;
		top: -60px;
		
	}

	span:nth-child(1) {
	animation-delay: .2s;
	}
	span:nth-child(2) {
	animation-delay: .6s;
	}
	span:nth-child(3) {
	animation-delay: 1.2s;
	}
	span:nth-child(4) {
	animation-delay: 1.8s;
	}
	span:nth-child(5) {
	animation-delay: 2.4s;
	}
	span:nth-child(6) {
	animation-delay: 1.1s;
	}

	span:nth-child(7) {
	animation-delay: 1.2s;
	}
	span:nth-child(7) {
	animation-delay: 1.3s;
	}
	/* Animaci√≥n */
	@keyframes fadeIn {
	0% {
		opacity: 0;
		transform: translateY(20px);
	}
	100% {
		opacity: 1;
		transform: translateY(0);
	}
}

	@media screen and (max-width: 800px) {
		.name {
			font-size: 10rem;;
		}
		.bill{

		top: 40px;

		}
		.rex{
	
			top: -40px;
		
			letter-spacing: 1rem;

			
		}
	}
</style>
