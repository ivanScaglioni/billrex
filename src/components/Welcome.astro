---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
import Image from 'astro/components/Image.astro';
import billreximg from '../assets/Billrex_04.png'
import billimg from '../assets/billrex.png'
import swampimg from '../assets/R.png'
---

<div id="container">


	<img class="br_img" src={billimg.src} alt="asd">
	<img class="swamp_img " src={swampimg.src} alt="asd">
	<div class="name">
		<div class="bill">
			BILL
		</div>
		<div class="rex">
			REX
		</div>
	</div>
	<div class="bar_black">

	</div>
</div>



<style>
	#container{
		
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		width: 100% ;
		height: 100vh;
		background-position: center;
		background-repeat: no-repeat;
		font-size:  15rem;
		color: #b5ff78;
		font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
		
	}
	
	.name{
		z-index: 2;
		position: fixed;
		text-shadow: 0px 0px 15px #b5ff78;
		
		font-family: "Amarante", serif;
		font-weight: 400;
		font-style: normal;
	}
	.br_img{
		position: absolute;
		height: 100vh;
		margin-left: -40vh;
		z-index: 1;
		filter: brightness(0);

	}
	.swamp_img{
		position: absolute;
	
		width: 800px;
		margin-top: 50vh;


		z-index: 3;
		filter:brightness(0); 

		overflow: hidden;
	
	}
	.bar_black{
		min-height: 150px;
		width: 100%;
		background-color: black;
		align-self: flex-end;
		justify-self: flex-end;
		margin-top: 100vh;
		z-index: 30;
		box-shadow: 0px 0px 100px 10px black;
	}
	.bill{
		position: relative;
		top: 60px;

	}
	.rex{
		position: relative;
		top: -60px;
		
	}
</style>
