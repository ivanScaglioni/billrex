<script>

    document.addEventListener("DOMContentLoaded", () => {
        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                entry.target.classList.add("start");
                }
            });
        });

        const enterElements = document.querySelectorAll(".enter");
        enterElements.forEach((el) => observer.observe(el));
    });

</script>

<div id="games" class="game_container  ">


    <div class="title">

        <div class="vertical">

            <div class="cha">
    
                G
            </div>
            <div class="cha">
    
                A
            </div>
            <div class="cha">
    
                M
            </div>
            <div class="cha">
    
                E
            </div>
            <div class="cha">
    
                S
            </div>
        </div>


    </div>

    <div class="content">

        <div class="enter">

            <Mountain />
        </div>

    </div>

    
</div>

<style>

    
    .title{
        text-align: end;
        position: relative;

        min-width: 30%;
        color: #27374D;

        background-color: #cff694;
        border-top-right-radius: 10px;
        border-bottom-right-radius: 10px;
    }
    
    .game_container{
        display:  grid;
        grid-template-columns: 30%  auto;
        min-width: 100%;
        max-width: 100%;
        gap: 30px;
        min-height:100vh;
        position: relative;
    
    

    }
    .content{
        position: relative;
        overflow: hidden;
    }

    .enter{
        width: 100%;
        height: 100%;
        position: relative;
        left: 90%;
        animation-name: zero_left;
        animation-duration: 1s;
        animation-fill-mode: forwards;
        animation-play-state: paused;
    }

    .start{
        animation-play-state: running;
    }
    .cha{
        
    }
    .vertical{
        text-align: center;
        position: sticky ;
        top: 100px;


    }


    @keyframes zero_left {
        100%{
            left: 0px;

        }
    }
    
    @media screen and (max-width: 800px) {
        .game_container{
            grid-template-columns: 2rem  auto;
            gap: 10px;
        }
    }

</style>
